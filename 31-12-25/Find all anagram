def findAnagrams(s, p):
    from collections import Counter
    res = []
    pc = Counter(p)
    sc = Counter()
    l = 0
    for r in range(len(s)):
        sc[s[r]] += 1
        if r-l+1 > len(p):
            sc[s[l]] -= 1
            if sc[s[l]] == 0: del sc[s[l]]
            l += 1
        if sc == pc:
            res.append(l)
    return res
